    <Reference Include="MathWorks.MATLAB.Engine">
      <HintPath>$(matlabroot)/extern/dotnet/netstandard2.0/MathWorks.MATLAB.Engine.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
